<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

    <diskStore path="./cache" />

    <defaultCache   maxElementsInMemory="10000"
                    eternal="true"
                    overflowToDisk="true"
                    diskPersistent="true"
                    diskExpiryThreadIntervalSeconds="120"
                    memoryStoreEvictionPolicy="FIFO" />

    <cache  name="Model.User"
            maxElementsInMemory="1000"
            overflowToDisk="true" />
</ehcache>